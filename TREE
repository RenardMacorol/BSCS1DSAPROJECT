import java.util.*;

public class Treetree {

	 static class Node {
	        String value;
	        Node left, right;

	        Node(String item) {
	            value = item;
	            left = right = null;
	        }
	    }

	    static Node root;

	    public static void main(String[] args) {
	        // Create the binary tree
	        root = new Node("-");
	        root.left = new Node("+");
	        root.left.left = new Node("A");
	        root.left.right = new Node("B");
	        root.right = new Node("C");

	        // Print the binary tree
	        System.out.println("Expression: " + root.value);
	        System.out.println("           ( " + root.left.value + " )");
	        System.out.println("       /           \\");
	        System.out.println("  ( " + root.left.left.value + " )     ( " + root.left.right.value + " )");
	        System.out.println("                      ( " + root.right.value + " )");

	        // Ask the user to change the values of the leaf nodes
	        Scanner scanner = new Scanner(System.in);
	        System.out.print("Enter new value for A: ");
	        root.left.left.value = scanner.next();
	        System.out.print("Enter new value for B: ");
	        root.left.right.value = scanner.next();
	        System.out.print("Enter new value for C: ");
	        root.right.value = scanner.next();

	        // Print the updated binary tree
	        System.out.println("Updated expression: " + root.value);
	        System.out.println("           ( " + root.left.value + " )");
	        System.out.println("       /           \\");
	        System.out.println("  ( " + root.left.left.value + " )     ( " + root.left.right.value + " )");
	        System.out.println("                      ( " + root.right.value + " )");
	    }
	}

